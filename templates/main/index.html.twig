{% extends 'base.html.twig' %}

{% block title %}Choose the QUIZ!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
        .header{
            background-image: linear-gradient(to right top, #ffcc00, #2e3136, #5eb5e0);
        }
        .header a{
            float: right;
            margin: 10px;
        }
        /*.example-wrapper a{*/
        /*    float: left;*/
        /*}*/

    </style>

    <div class="container-fluid header clearfix" >
        <a class="btn btn-warning" href="{{ '/logout' }}">logout</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-warning" href="{{ '/add/quiz' }}">add quiz</a>
            <a class="btn btn-warning" href="{{ '/user' }}">show users</a>
        {% endif %}
    </div>

    <div class="example-wrapper">
        <h1>Choose the QUIZ! âœ…</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Quiz</th>
                <th>Enter</th>
            </tr>
            </thead>
            <tbody>

            {% for quiz in quizes %}
                <tr>
                    <th>
                        {{ quiz.quiz}}
                    </th>
                    <th>
{#                        {% for question in questions %}#}
                            <a class="btn btn-danger" href="{{ path('start_quiz', {'id': quiz.id}) }}">Start</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="btn btn-info" href="{{ path('add_question', {'id': quiz.id}) }}">Add question</a>
                            {% endif %}
{#                        {% endfor %}#}
                    </th>
                </tr>
            {% endfor %}


            </tbody>
        </table>
    </div>
{% endblock %}
